  %body.blog
    %header
      %h1{:itemprop => "name"}
        %a.headline{:href => "../"}
          %span Vincent Tourraine
        %span#main.icon
          %img{:src => "../style/img/notepad-28-2x.png", :alt => ""}
          Blog

    %section#blog
      %h2 Tous les billets
      - @articles.reverse_each do |article|
        %article
          %h3
            %a{:href => "#{article.url}"} #{article.title}
          %div
            #{article.summary}
          .meta
            %time{:datetime =>"#{article.date.strftime('%F')}"}
              #{article.locale_date},
            - article.keywords.each do |keyword|
              %span.tag 
                \##{keyword}

