  %body.post
    %header
      %h1
        %a.headline{:href => "../"}
          %span Vincent Tourraine
        %span#main
          %a{:href => "./"}
            %span.icon
              %img{:src => "http://www.vtourraine.net/blog/styles/img/notepad-28-2x.png", :alt => ""}
            %span
              Blog

    %article.post
      %h1{:itemprop => "name"}
        #{title}
      %div.meta
        %time{:datetime =>"#{date.strftime('%F')}"}
          #{locale_date},
        - keywords.each do |keyword|
          %span.tag 
            \##{keyword}
      -# <div itemprop="description" class="description">[DESCRIPTION]</div>
      #{body}
      .share
        %a{:href => "https://twitter.com/share", :class => "twitter-share-button", :"data-text" =>"&quot;#{title}&quot; par @vtourraine", :"data-count" => "horizontal", :"data-lang" => "fr"}
          Tweet
          %script{:type => "text/javascript", :src => "//platform.twitter.com/widgets.js"}
        %div.g-plusone{ :"data-size" => "medium"}
        %a.profile{:href => "https://plus.google.com/u/0/117326560329576507699/posts", :rel => "author me"} Google+
      %div.comments
        %div#disqus_thread
          :javascript
            var disqus_shortname = 'vtourraine';
            var disqus_url = '#{disqus_url}';

            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          %noscript 
            Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
          %a{:href => "http://disqus.com", :class => "dsq-brlink"} 
            blog comments powered by 
            %span.logo-disqus
              Disqus

